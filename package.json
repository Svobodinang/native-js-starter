{
    "name": "native-js-starter",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "npm run lint && tsc && vite build",
        "preview": "vite preview",
        "lint": "npm run lint:eslint && npm run lint:stylelint && npm run lint:pug",
        "lint:eslint": "eslint src --ext .ts,.js",
        "lint:pug": "pug-lint src/**/*.pug",
        "lint:stylelint": "stylelint '**/*.{css,scss}'",
        "format": "prettier --write \"src/**/*.{js,ts,scss,css,pug}\""
    },
    "devDependencies": {
        "@prettier/plugin-pug": "^3.4.0",
        "@types/node": "^24.0.0",
        "eslint": "^9.28.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-prettier": "^5.4.1",
        "eslint-plugin-promise": "^7.2.1",
        "prettier": "^3.5.3",
        "pug": "^3.0.3",
        "pug-lint": "^2.7.0",
        "pug-lint-config-clock": "^2.0.0",
        "sass": "^1.89.2",
        "stylelint": "^16.20.0",
        "stylelint-config-standard": "^38.0.0",
        "stylelint-config-standard-scss": "^15.0.1",
        "stylelint-order": "^7.0.0",
        "stylelint-prettier": "^5.0.3",
        "stylelint-scss": "^6.12.1",
        "typescript": "~5.8.3",
        "typescript-eslint": "^8.34.1",
        "vite": "^6.3.5",
        "vite-plugin-checker": "^0.9.3",
        "vite-plugin-eslint": "^1.8.1",
        "vite-plugin-pug": "^0.4.1",
        "vite-plugin-stylelint": "^6.0.0"
    }
}
